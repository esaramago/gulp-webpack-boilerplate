{
    "name": "gulp-webpack-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate with Gulp, for SASS, and Webpack, for js bundling",
    "main": "gulpfile.js",
    "scripts": {
        "build:dev": "gulp",

        "webpack-bundle": "webpack --mode production",
        "gulp-styles": "gulp styles",
        "build:prod": "npm run webpack-bundle && npm run gulp-styles"
    },
    "author": "esaramago",
    "license": "ISC",
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.4",
        "babel-preset-env": "^1.6.1",
        "gulp": "^3.9.1",
        "gulp-plumber": "^1.2.0",
        "gulp-sass": "^3.1.0",
        "gulp-sass-glob": "^1.0.8",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-watch": "^5.0.0",
        "webpack": "^4.2.0",
        "webpack-cli": "^2.0.12",
        "webpack-dev-server": "^3.1.1",
        "webpack-stream": "^4.0.2"
    },
    "presets": [
        "@babel/preset-env",
        {
            "targets": {
                "browsers": [
                    "last 2 versions",
                    "safari >= 7"
                ]
            }
        }
    ]
}
